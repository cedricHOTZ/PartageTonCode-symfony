{% extends 'base.html.twig' %}

{% block title %}Pinterest
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>


	{% if pins|length > 0 %}
		<h1>
			<!-- affiche le singulier ou pluriel de pin -->
			{{ function_name(pins|length, 'pin', 'pins')}}</h1>
		{% for pin in pins %}
			<article>
				<img src="{{ vich_uploader_asset(pin)|imagine_filter('square_thumbnail_medium')}}" alt="{{pin.title}}"/>
				<h1>
					<a href="{{ path('show',{id: pin.id}) }}">
						{{pin.title}}</a>
				</h1>

				<p>{{pin.description|u.truncate(10,'...',false)}}</p>
				<p>{{pin.createdAt|ago}}</p>
			</article>
		{% endfor %}
	{% else %}
		<h2 class="text-center">
			Aucun pin |
			<a href="{{path('create') }}">
				Créer le premié pin</a>
		</h2>
	{% endif %}


{% endblock %}
